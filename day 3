    cin>>n;
    cout<<"Enter the number of chairs: ";
    cin>>c;
    if(c > n) {
        d = c - n;
        cout<<d<<" are the extra chairs.";
    }
    esle if(c == n) {  
        cout<<"numbers of chairs are sufficient enough.";
    }
    esle if(c < n) { 
        d = n - c ;
        cout<<d<<"are the numbers of chairs required.";
    };
    return 0:
};  
